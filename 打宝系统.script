var  //自定义参数
  Kings: Integer;

Function MapObjectType: Integer;  //自定义功能，预设计数个不同的事件（编号），对应不同的地图对象。。。地图对象编号可参考游戏自带地图编辑器里面有
begin
  case S.KaMRandomI(3) of
    0: Result := 21;  //事件编号0，对应地图对象21，可自定义对象。以下同理。
    1: Result := 59;
    2: Result := 57;
  end;
end;

